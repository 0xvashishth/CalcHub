    <script>
        var num1 = document.getElementById("a").value;
        var num2 = document.getElementById("b").value;
        var num3 = document.getElementById("c").value;
        var view = document.getElementById("ans");
    
            function pot(){
                if(num2 / 2 == num3){
                    pot = document.write("Pots can be made!!!");
                }
                else{
                    pot = document.write("Pots cannot be made!!!");
                
                }
