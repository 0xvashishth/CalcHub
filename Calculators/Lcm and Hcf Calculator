<body>
    <div class="shape">
    	<h3>LCM and HCF Calculator</h3>
        <table>
    		<tr>
                <td> Enter the 1st Number </td>
    			<td>
                    
                    <input type="text" id="a">
                </td>
            </tr>
            <tr>
                <td> Enter the 2nd Number </td>
    			<td>
                    
                    <input type = "text" id="b">
                </td>
    			<!-- button value attribute -->
            </tr>
            
            <tr>
    			<td>
                    <button onclick="calc(this.innerHTML)">HCF</button> <!-- last button for lcm -->
                    <button onclick="calc(this.innerHTML)">LCM</button> <!--last button for hcf -->
                </td> 

            </tr>

            <tr>
                <td id="ans"></td>
            </tr>
        </table>

    </div>
    <script>
        function calc(e){

                var num1 = document.getElementById("a").value;
                var num2 = document.getElementById("b").value;
                var view = document.getElementById("ans");
                var result;
                if(e=="HCF"){
                    for(let i=1;i<=num1 && i<=num2;i++){
                        if(num1%i==0 && num2%i==0){
                            result=i;
                        }
                    }
                }else if(e=="LCM"){
                    let max=num1>num2?num1:num2;
                    while(true){
                        if(max%num1 == 0 && max%num2 == 0){
                            result = max;
                            break;
                        }
                        max++;
                    }
            
                }
                view.innerHTML = result;
}
    </script>
    
