<body>
    <div class="shape">
    	<h3> Least Common Multiple </h3>
    	
    	<table>
    		<tr>
    			<td><input type="text" id="Fvalue"></td>
    			<td><input type = "text" id="Svalue"></td>
    			<!-- button value attribute -->
    			<td><button onclick="lcm()">Click</button></td> <!-- last button -->
    		</tr>
    		<tr>
    			<td>LCM = </td>
    			
    			<td><span id="ans"></span></td>
    		</tr>
    	</table>

    </div>
    <script>
        var f = document.getElementById("Fvalue").value;
        var s = document.getElementById("Svalue").value;
        var view = document.getElementById("ans");
        function lcm(){
    	    for(i=1;i<=f*s; i++){
    		    if(i%f==0 && i%s==0){
    			    lcm = i;
    	        }
    	    }
    	    view.innerHTML=lcm;
        }
    </script>
